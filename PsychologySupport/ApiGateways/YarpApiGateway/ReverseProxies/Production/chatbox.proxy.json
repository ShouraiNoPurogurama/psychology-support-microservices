{
  "ReverseProxy": {
    "Routes": {
      "chatbox-health": {
        "ClusterId": "chatbox-cluster",
        "Match": {
          "Path": "/chatbox-service/health"
        },
        "Transforms": [ { "PathPattern": "/health" } ]
      },
      "chatbox-swagger": {
        "ClusterId": "chatbox-cluster",
        "Match": {
          "Path": "/chatbox-service/swagger/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
      },
      "chatbox-route": {
        "ClusterId": "chatbox-cluster",
        "RateLimiterPolicy": "chat_limit_fixed_window",
        "Match": {
          "Path": "/chatbox-service/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUser",
        "Transforms": [
          { "PathPattern": "/{**catch-all}" },
          { "TokenExchange": "enabled" }
        ]
      }
    },
    "Clusters": {
      "chatbox-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://chatbox.api:8080/"
          }
        }
      }
    }
  }
}
