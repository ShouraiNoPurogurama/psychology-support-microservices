{
  "ReverseProxy": {
    "Routes": {
      "image-health": {
        "ClusterId": "image-cluster",
        "Match": {
          "Path": "/image-service/health"
        },
        "Transforms": [ { "PathPattern": "/health" } ]
      },
      "image-swagger": {
        "ClusterId": "image-cluster",
        "Match": {
          "Path": "/image-service/swagger/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
      },
      "image-route": {
        "ClusterId": "image-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/image-service/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUser",
        "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
      }
    },
    "Clusters": {
      "image-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://image.api:8080/"
          }
        }
      }
    }
  }
}
