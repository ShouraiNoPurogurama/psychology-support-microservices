{
  "ReverseProxy": {
    "Routes": {
      "subscription-health": {
        "ClusterId": "subscription-cluster",
        "Match": {
          "Path": "/subscription-service/health"
        },
        "Transforms": [
          { "PathPattern": "/health" }
        ]
      },
      "subscription-swagger": {
        "ClusterId": "subscription-cluster",
        "Match": {
          "Path": "/subscription-service/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      },
      "subscription-service-packages-v2": {
        "ClusterId": "subscription-cluster",
        "Match": {
          "Path": "/subscription-service/v2/service-packages"
        },
        "Transforms": [
          { "PathPattern": "/v2/service-packages" }
        ]
      },
      "subscription-route": {
        "ClusterId": "subscription-cluster",
        "RateLimiterPolicy": "fixed",
        "AuthorizationPolicy": "AuthenticatedUser",
        "Match": {
          "Path": "/subscription-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" },
          { "TokenExchange": "enabled" }
        ]
      }
    },
    "Clusters": {
      "subscription-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://subscription.api:8080/"
          }
        }
      }
    }
  }
}
