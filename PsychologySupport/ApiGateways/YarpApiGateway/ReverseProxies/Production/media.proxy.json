{
  "ReverseProxy": {
    "RouteGroups": {
      "media-group": {
        "ClusterId": "media-cluster",
        "RateLimiterPolicy": "fixed",
        "Routes": {
          "media-health": {
            "Match": { "Path": "/media-service/health" },
            "Transforms": [ { "PathPattern": "/health" } ]
          },
          "media-swagger": {
            "Match": { "Path": "/media-service/swagger/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
          },
          "media-route": {
            "Match": { "Path": "/media-service/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
          }
        }
      }
    },
    "Clusters": {
      "media-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://media.api:8080/"
          }
        }
      }
    }
  }
}

