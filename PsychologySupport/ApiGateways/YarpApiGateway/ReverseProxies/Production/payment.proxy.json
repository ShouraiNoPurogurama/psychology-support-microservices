{
  "ReverseProxy": {
    "Routes": {
      "payment-health": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/payment-service/health"
        },
        "Transforms": [
          { "PathPattern": "/health" }
        ]
      },
      "payment-swagger": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/payment-service/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      },
      "payment-webhook": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/payment-service/payments/payos/webhook"
        },
        "Transforms": [
          { "PathPattern": "/payments/payos/webhook" }
        ]
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/payment-service/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUser",
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "payment-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://payment.api:8080/"
          }
        }
      }
    }
  }
}
