{
  "ReverseProxy": {
    "RouteGroups": {
      "translation-group": {
        "ClusterId": "translation-cluster",
        "RateLimiterPolicy": "fixed",
        "Routes": {
          "translation-health": {
            "Match": { "Path": "/translation-service/health" },
            "Transforms": [ { "PathPattern": "/health" } ]
          },
          "translation-swagger": {
            "Match": { "Path": "/translation-service/swagger/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
          },
          "translation-route": {
            "Match": { "Path": "/translation-service/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
          }
        }
      }
    },
    "Clusters": {
      "translation-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5509/"
          }
        }
      }
    }
  }
}

