{
  "ReverseProxy": {
    "RouteGroups": {
      "scheduling-group": {
        "ClusterId": "scheduling-cluster",
        "RateLimiterPolicy": "fixed",
        "Routes": {
          "scheduling-health": {
            "Match": { "Path": "/scheduling-service/health" },
            "Transforms": [ { "PathPattern": "/health" } ]
          },
          "scheduling-swagger": {
            "Match": { "Path": "/scheduling-service/swagger/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
          },
          "scheduling-route": {
            "Match": { "Path": "/scheduling-service/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/{**catch-all}" } ],
            "AuthorizationPolicy": "AuthenticatedUser"
          }
        }
      }
    },
    "Clusters": {
      "scheduling-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5502/"
          }
        }
      }
    }
  }
}

