{
  "ReverseProxy": {
    "Routes": {
      "profile-health": {
        "ClusterId": "profile-cluster",
        "Match": {
          "Path": "/profile-service/health"
        },
        "Transforms": [ { "PathPattern": "/health" } ]
      },
      "profile-swagger": {
        "ClusterId": "profile-cluster",
        "Match": {
          "Path": "/profile-service/swagger/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
      },
      "profile-route": {
        "ClusterId": "profile-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/profile-service/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUser",
        "Transforms": [ 
          { "PathPattern": "/{**catch-all}" },
          { "TokenExchange": "enabled" }
        ]
      }
    },
    "Clusters": {
      "profile-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5501/"
          }
        }
      }
    }
  }
}
