{
  "ReverseProxy": {
    "RouteGroups": {
      "notification-group": {
        "ClusterId": "notification-cluster",
        "RateLimiterPolicy": "fixed",
        "Routes": {
          "notification-health": {
            "Match": { "Path": "/notification-service/health" },
            "Transforms": [ { "PathPattern": "/health" } ]
          },
          "notification-swagger": {
            "Match": { "Path": "/notification-service/swagger/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/swagger/{**catch-all}" } ]
          },
          "notification-route": {
            "Match": { "Path": "/notification-service/{**catch-all}" },
            "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
          }
        }
      }
    },
    "Clusters": {
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5512/"
          }
        }
      }
    }
  }
}

