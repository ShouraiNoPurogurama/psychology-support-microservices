<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <NoWarn>$(NoWarn);CS9113;CS8618;CS8602;CS8629;CS8600;CS8601;CS8604;CS8625;CS8603</NoWarn>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore" />
        <PackageReference Include="QuestPDF" />
		<PackageReference Include="Grpc.AspNetCore" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\..\BuildingBlocks\BuildingBlocks.Messaging\BuildingBlocks.Messaging.csproj" />
        <ProjectReference Include="..\..\..\BuildingBlocks\BuildingBlocks\BuildingBlocks.csproj" />
        <ProjectReference Include="..\..\Translation\Translation.API\Translation.API.csproj" />
        <ProjectReference Include="..\Test.Domain\Test.Domain.csproj" />
    </ItemGroup>
	<ItemGroup>
		<Protobuf Include="..\..\Translation\Translation.API\Protos\pii.proto">
		  <GrpcServices>Client</GrpcServices>
		  <Access>Public</Access>
		  <ProtoCompile>True</ProtoCompile>
		  <CompileOutputs>True</CompileOutputs>
		  <OutputDir>obj\Debug\net9.0\</OutputDir>
		  <Generator>MSBuild:Compile</Generator>
		  <Link>Protos\pii.proto</Link>
		</Protobuf>
		<Protobuf Include="..\..\Translation\Translation.API\Protos\translation.proto" GrpcServices="Client">
			<Link>Protos\translation.proto</Link>
		</Protobuf>
	</ItemGroup>
</Project>